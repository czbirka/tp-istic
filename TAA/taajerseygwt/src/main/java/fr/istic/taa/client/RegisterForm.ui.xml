<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:b2='urn:import:com.github.gwtbootstrap.datepicker.client.ui'>
    <gwt:HTMLPanel>

        <b:ResponsiveNavbar>
            <b:Brand href="#home">tpgwt</b:Brand>
            <b:Nav alignment="RIGHT">
                <b:NavLink href="#home">Home</b:NavLink>
                <b:NavLink href="#create">Create</b:NavLink>
                <b:Dropdown text="Members">
                    <b:NavLink href="#users">List</b:NavLink>
                    <b:NavLink href="#register">Create</b:NavLink>
                </b:Dropdown>
            </b:Nav>
        </b:ResponsiveNavbar>

        <b:FluidContainer>
            <b:FluidRow>
                <b:Column size="12">
                    <b:Form type="HORIZONTAL" ui:field="registerForm">
                        <b:Fieldset>
                            <b:ControlGroup>
                                <b:ControlLabel for="username">Username</b:ControlLabel>
                                <b:Controls>
                                    <b:TextBox alternateSize="XLARGE" b:id="username" ui:field="username"></b:TextBox>
                                </b:Controls>
                            </b:ControlGroup>


                            <b:ControlGroup>
                                <b:ControlLabel for="password">Password</b:ControlLabel>
                                <b:Controls>
                                    <b:PasswordTextBox alternateSize="XLARGE" b:id="password" ui:field="password"></b:PasswordTextBox>
                                </b:Controls>
                            </b:ControlGroup>

                            <b:SubmitButton addStyleNames="btn">Submit</b:SubmitButton>
                        </b:Fieldset>
                    </b:Form>
                </b:Column>
            </b:FluidRow>
        </b:FluidContainer>
    </gwt:HTMLPanel>
</ui:UiBinder>